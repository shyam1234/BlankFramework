<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_cell_holder"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorWhite"
    android:layout_margin="5dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttoncolor"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rel_coutn_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:padding="0dp">

            <TextView
                android:background="@drawable/filled_circle"
                android:id="@+id/textview_dashboard_notifcation_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="8sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageview_dashboard_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/noticeboard" />

            <TextView
                android:id="@+id/textview_dashboard_cell_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageview_dashboard_holder"
                android:layout_alignRight="@+id/imageview_dashboard_holder"
                android:layout_below="@+id/imageview_dashboard_holder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Text"
                android:textColor="@color/dashboardTextColor"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
